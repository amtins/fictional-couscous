{
  "name": "fictional-couscous",
  "version": "0.0.1",
  "description": "Conventional commits coupled with semantic-release and commitlint",
  "main": "src/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "semantic-release --debug"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@amtins"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/amtins/fictional-couscous.git"
  },
  "author": "amtins <amtins@github.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amtins/fictional-couscous/issues"
  },
  "homepage": "https://github.com/amtins/fictional-couscous#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/commit-analyzer": "^7.0.0",
    "@semantic-release/git": "^8.0.0",
    "@semantic-release/npm": "^6.0.0",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "husky": "^4.0.10",
    "semantic-release": "^16.0.2",
    "standard-version": "^7.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "branches": [
    "master"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/git"
  ]
}