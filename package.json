{
  "name": "fictional-couscous",
  "version": "2.1.1",
  "description": "Conventional commits coupled with semantic-release, commitlint, and github actions.",
  "main": "src/app.js",
  "scripts": {
    "release:ci": "semantic-release"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@amtins",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/amtins/fictional-couscous.git"
  },
  "author": "amtins <amtins@github.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amtins/fictional-couscous/issues"
  },
  "homepage": "https://github.com/amtins/fictional-couscous/blob/master/docs/README.md",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^8.0.0",
    "husky": "^4.2.3",
    "semantic-release": "^16.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "master"
    ],
    "prepare": [
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "docs/CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "docs/CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
